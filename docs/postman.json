{
  "info": {
    "name": "Shop API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/register/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"phone_number\": \"1234567890\",\n  \"password\": \"securepassword\",\n  \"username\": \"newuser\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/login/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"login\": \"user@example.com\",\n  \"password\": \"securepassword\"\n}"
            }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/verify-otp/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "verify-otp"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"login\": \"user@example.com\",\n  \"otp\": \"123456\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Shop",
      "item": [
        {
          "name": "Get Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/products/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "products"],
              "query": [
                {
                  "key": "search",
                  "value": "product_name"
                },
                {
                  "key": "category",
                  "value": "category_id"
                }
              ]
            }
          }
        },
        {
          "name": "Get Categories",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/categories/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "categories"],
              "query": [
                {
                  "key": "search",
                  "value": "category_name"
                }
              ]
            }
          }
        },
        {
          "name": "Create Product (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/products/create/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "products", "create"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Product\",\n  \"description\": \"Product description\",\n  \"price\": 19.99,\n  \"category_id\": 1\n}"
            }
          }
        },
        {
          "name": "Update Product (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/products/update/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "products", "update"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 1,\n  \"name\": \"Updated Product\",\n  \"description\": \"Updated description\",\n  \"price\": 24.99,\n  \"category_id\": 2\n}"
            }
          }
        },
        {
          "name": "Create Category (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/categories/create/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "categories", "create"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Category\",\n  \"description\": \"Category description\"\n}"
            }
          }
        },
        {
          "name": "Update Category (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/categories/update/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "categories", "update"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 1,\n  \"name\": \"Updated Category\",\n  \"description\": \"Updated category description\"\n}"
            }
          }
        },
        {
          "name": "Add Items to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/cart/add-items/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "cart", "add-items"]
            },
            "body": {
              "mode": "raw",
              "raw": "[\n  {\n    \"product_id\": 1,\n    \"quantity\": 2\n  },\n  {\n    \"product_id\": 2,\n    \"quantity\": 1\n  }\n]"
            }
          }
        },
        {
          "name": "Get User Purchases",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/user/get-purchases/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "user", "get-purchases"]
            }
          }
        },
        {
          "name": "Get User Active Carts",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/user/get-active-carts/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "user", "get-active-carts"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "access_token",
      "value": "your_access_token_here"
    }
  ]
}
